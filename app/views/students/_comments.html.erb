<% highlight_styles = 'border-highlight' if is_highlighted %>
<% comments_by_day.each do |time, comments| %>
  <p class="comment-day"><%= (time == Date.today) ? t('date.today') : comments.first.decorate.format_date %></p>
  <% comments.each do |comment| %>
    <div class="comment-box <%= highlight_styles %>">
      <div class="comment-wrapper">
        <div class= "comment-name">
          <p><%= comment.user.full_name %></p>
          <span><%= comment.decorate.format_time %></span>
        </div>
        <div class= "like-box">
          <p><%= comment.likes.count %></p>
          <% pre_like = comment.likes.find { |like| like.user_id == current_user.id} %>
          <% if pre_like %>
            <%= button_to student_like_path(pre_like.id, student_id: student.id ),class:"btn-like btn-unlike", method: :delete do%>
              <%= image_tag "thumbs-up.svg", class:"like-image" %>        
            <%end%>
          <% else %>
            <%= button_to student_comment_likes_path(student, comment_id: comment), class:"btn-like", method: :post do%>
              <%= image_tag "thumbs-up.svg", class:"like-image" %>  
            <%end%>
          <%end%>
        </div>
      </div>
      <p class="comment-body"><%= comment.body %></p>
      <%= render 'attachments', comment: comment if comment.files.attached? %>
      <details open class= "comment-details-style">
        <summary></summary>
            <% comment.sub_comments.each do |sub_comment| %>
              <div class="comment-wrapper sub-comment-spacing">
                <div class="user-wrapper">
                  <p class="comment-name"><%= sub_comment.user.full_name %></p>
                  <span><%= sub_comment.decorate.format_time %></span>
                </div>
                <p class="comment-body"><%= sub_comment.body %></p>
              </div>
            <% end %>
        <div class='comment-details'>
          <%= form_with url: student_comment_sub_comments_path(student, comment_id: comment), method: :post do %>
            <div class='form-sub_comment'>
              <textarea name="body" rows="2" cols="50" placeholder='<%=t('comments.placeholder')%>' ></textarea>
              <%= button_tag :submit, class: 'form-btn-sub-comment' do %>
                <%= image_tag 'send.svg' %> 
              <% end %>
            </div>  
          <% end %>
        </div>
      </details>
    </div>
  <% end %>
<% end %>